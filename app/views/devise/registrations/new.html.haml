.card.mx-auto.mt-5.text-center.card-devise-box
  .card-header.bg-primary.text-white
    新規会員登録
  .card-body
    %p.card-text 
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :name
          = f.text_field :name, class:"text-box", placeholder: "ニックネーム（50文字以内）"
        .field
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", class:"text-box", placeholder: "メールアドレス"
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "new-password", class:"text-box", placeholder: "パスワード（#{@minimum_password_length}文字以上）"
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", class:"text-box", placeholder: "パスワード（確認用）"
        .actions
          = f.submit "登録", class:"btn btn-primary"
        %br/
      = render "devise/shared/links"
