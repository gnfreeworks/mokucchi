.card.mx-auto.mt-5.text-center.card-devise-box
  .card-header.bg-primary.text-white
    ログイン
  .card-body
    %p.card-text 
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class:"text-box", placeholder: "メールアドレス"
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password", class:"text-box", placeholder: "パスワード（6文字以上）"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "ログインする", class:"btn btn-primary"
        %br/
      = render "devise/shared/links"
