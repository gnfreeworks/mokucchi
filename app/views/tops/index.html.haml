- if user_signed_in?
  = current_user.email
  = current_user.name
  = current_user.nickname
  = current_user.image
  = current_user.location
  = link_to "ログアウト", destroy_user_session_path, method: :delete


- else
  .wrap
    = video_tag "top_movie.mp4", poster:"top_image.jpg",autoplay: true, loop: true, id:"bg-video"
    .header-title
    
    .container-fluid
      .row
        .col-3
        .col-6
          .jumbotron.register-box
            .text-center.register-box-description
              『mokucchi』を今すぐ始めるにはこちら
            %br/
            .text-center
              = link_to user_twitter_omniauth_authorize_path, class:"btn btn-primary register-btn" do
                = icon('fab', 'twitter')
                Twitterアカウントで始める
            %br/
            .text-center
              = link_to new_user_registration_path, class:"btn btn-secondary register-btn" do
                = icon('far','envelope')
                メールアドレスで始める
        .col-3
